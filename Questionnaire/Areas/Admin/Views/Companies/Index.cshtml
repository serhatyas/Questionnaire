@model Questionnaire.Models.ServiceModel.ServiceModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section id="basic-datatable">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Şirket Listesi</h4>
                </div>
                <div class="card-content">
                    <div class="card-body card-dashboard">
                        <div class="d-flex justify-content-end m-r-10">
                            <a href="/Admin/Companies/Create" class="btn btn-success pull-right">Şirket Ekle</a>

                        </div>
                        <table class="table table-hover table-striped">
                            <thead>
                                <tr>
                                    <th>Logo</th>
                                    <th>İsim</th>
                                    <th>Telefon</th>
                                    <th>Tarih</th>
                                    <th colspan="2">İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model.Companies.OrderBy(x=>x.Id))
                                {
                                    <tr>
                                        <td><img style="width:100px" src="@item.Logo" alt="Alternate Text" /></td>
                                        <td>@item.Name</td>
                                        <td>@item.Phone1</td>
                                        <td>@item.Date</td>
                                        <td><a class="btn btn-primary" href="/Admin/Companies/Update/@item.Id">Düzenle</a></td>
                                        <td width="80"><button onclick="btnDelete(@item.Id, '/admin/companies/delete')" type="submit" class="btn btn-danger">Sil</button></td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

