@model Questionnaire.Models.ServiceModel.ServiceModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section id="basic-datatable">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Gizli Müşteri Listesi</h4>
                </div>
                <div class="card-content">
                    <div class="card-body card-dashboard">
                        <div class="d-flex justify-content-end m-r-10">
                            <a href="/Admin/CustomerCreation/Create" class="btn btn-success pull-right">Müşteri Ekle</a>

                        </div>
                        <table class="table table-hover table-striped">
                            <thead>
                                <tr>
                                    <th>Mail</th>
                                    <th>Ad</th>
                                    <th>Soyad</th>
                                    <th>Departman</th>
                                    <th>Tip</th>
                                    <th colspan="2">İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model.Customers.OrderBy(x => x.Id))
                                {
                                    <tr>
                                        <td>@item.TypeId</td>
                                        <td>@item.Name</td>
                                        <td>@item.Surname</td>
                                        <td>@item.CompanyGuid</td>

                                        <td><a class="btn btn-primary" href="/Admin/SystemUser/Update/@item.Id">Düzenle</a></td>
                                        <td><button onclick="btnDelete(@item.Id, '/admin/Systemuser/Delete')" type="submit" class="btn btn-danger">Sil</button></td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

